<%- include('../partials/header') %>
<input type="hidden" name="user" value="<%= currentUser %>">
<script src="../js/generatePassword.js"></script>
<div class="container">
    <form method="post" action="/password/create">
        <div class="form-group">
            <label for="url">URL:</label>
            <input id="url" class="form-control" type="text" name="url">
        </div>

        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" class="form-control" type="text" name="username">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control" type="text" name="password"> <button class="btn btn-primary" type="button" onclick="generatePassword()">Generate Password</button> <button class="btn btn-secondary" type="button">Show</button>
        </div>
    </form>
</div>
<%- include('../partials/footer')%>